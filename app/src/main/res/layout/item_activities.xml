<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItemActivities"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/density6"
    app:cardCornerRadius="@dimen/density6"
    app:cardElevation="@dimen/density6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivActivities"
            android:layout_width="@dimen/density360"
            android:layout_height="@dimen/density170"
            android:scaleType="centerCrop"
            android:src="@drawable/image_activities"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvActivitiesTittle"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/density10"
            android:layout_marginTop="@dimen/density6"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/scaleable16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivActivities"
            tools:text="Title activities" />

        <TextView
            android:id="@+id/tvDescriptionActivities"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density6"
            android:layout_marginEnd="@dimen/density6"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/scaleable12"
            app:layout_constraintStart_toStartOf="@id/tvActivitiesTittle"
            app:layout_constraintTop_toBottomOf="@id/tvActivitiesTittle"
            tools:text="Descriptions of activities" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>